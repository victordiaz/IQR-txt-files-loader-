CMAKE_MINIMUM_REQUIRED(VERSION 2.6)

SET(CMAKE_VERBOSE_MAKEFILE TRUE) 

ADD_DEFINITIONS(-DQT_THREAD_SUPPORT -D_REENTRANT -DQT_NO_DEBUG -DIQRMODULE)

SET(QT_MT_REQUIRED TRUE)
FIND_PACKAGE(Qt4 REQUIRED)


SET (libSrc 
iqrvj.cpp
)


INCLUDE_directories(
  ${CMAKE_CURRENT_SOURCE_DIR} 
  /usr/include/iqr
  ${QT_INCLUDE_DIR}
)



ADD_LIBRARY(iqrvj SHARED ${libSrc})


SET_TARGET_PROPERTIES(PDreceive PROPERTIES PREFIX "")

INSTALL(TARGETS 
  iqrvj
  LIBRARY DESTINATION $ENV{HOME}/iqr/lib/Modules 
)



